{
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "prettier",
        "@typescript-eslint"
    ],
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true,
        "jasmine": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 2020,
        "ecmaFeatures": {},
        "sourceType": "module",
        "experimentalObjectRestSpread": true
    },
    "rules": {
        "prettier/prettier": [
            "error",
            {
                "printWidth": 200,
                "tabWidth": 2,
                "bracketSpacing": false
            }
        ],
        "no-const-assign": "error",
        "no-this-before-super": "error",
        "no-undef": "error",
        "no-unreachable": "error",
        "constructor-super": "error",
        "valid-typeof": "error"
    }
}