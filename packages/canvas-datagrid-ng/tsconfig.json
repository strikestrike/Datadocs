{
  "compilerOptions": {
    "lib": [
      "ES2020",
      "DOM"
    ],
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist/esm",
    "incremental": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": false,
    "declaration": true,
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
  },
  "include": [
    "./lib"
  ],
  "exclude": [
    "dist",
    "archived",
    "node_modules"
  ]
}
