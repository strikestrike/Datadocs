{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "outDir": "dist/cjs",
    "incremental": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "removeComments": false,
    "declaration": true,
    "moduleResolution": "node"
  },
  "include": [
    "modules",
    "../../lib"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
