{
  "compilerOptions": {
    "lib": [
      "ES2022"
    ],
    "target": "ES2022",
    "module": "CommonJS",
    "outDir": "dist/cjs",
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "sourceMap": true,
    "removeComments": false,
    "declaration": false,
    "moduleResolution": "node",
    "preserveConstEnums": true,
  },
  "include": [
    "lib"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
